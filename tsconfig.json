{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@assets/*": ["./src/assets/*"],
      "@store/*": ["./src/store/*"],
    },
  },
  "include": ["src/**/*", "./App.tsx"],
}
